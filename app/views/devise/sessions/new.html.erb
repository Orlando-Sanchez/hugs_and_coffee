<%= render 'layouts/header' %>

<div class= "main">
  <div class= "back-wrapper">
    <%= link_to root_path do%>
      <%= image_tag("Vector.svg") %>
      <span class= "back">Atrás</span>
    <% end %>
  </div>

  <div class= "login-form-container">
    <div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class= "login-form">
          <h2 class= "login-header">Login</h2>

          <div class="field">
            <%= f.label :email, 'Correo electrónico', class: "label" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "field-field" %>
          </div>

          <div class="field">
            <%= f.label :password, 'Contraseña', class: "label" %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "field-field" %>
          </div>
        </div> 
        <div class= "submit-btn-wrapper">
          <%= f.submit "Entrar", class: "submit" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= render "devise/shared/links" %>


